<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ToDoApp.Views.MainPage"
             Title="Main Page">

    <VerticalStackLayout Padding="20" Spacing="10">
        <Button Text="To-Do Items" Command="{Binding NavigateToToDoItemsCommand}" />
        <Button Text="Categories" Command="{Binding NavigateToCategoriesCommand}" />
        <Button Text="Users" Command="{Binding NavigateToUsersCommand}" />
    </VerticalStackLayout>
</ContentPage>