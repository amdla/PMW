@model IEnumerable<OnlineStore.Models.Product>

<h1>Products</h1>

<table>
    <thead>
    <tr>
        <th>Name</th>
        <th>Price</th>
        <th>Category</th>
    </tr>
    </thead>
    <tbody>
    @foreach (var product in Model)
    {
        <tr>
            <td>@product.Name</td>
            <td>@product.Price</td>
            <td>@product.Category.Name</td>
        </tr>
    }
    </tbody>
</table>

<a asp-controller="Product" asp-action="Create">Create New Product</a>
