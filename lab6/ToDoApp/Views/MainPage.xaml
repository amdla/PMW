<?xml version="1.0" encoding="utf-8"?>

<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:ToDoApp.ViewModels"
             x:Class="ToDoApp.Views.MainPage">

    <ContentPage.BindingContext>
        <vm:ToDoViewModel />
    </ContentPage.BindingContext>

    <VerticalStackLayout Padding="20">
        <Entry Placeholder="Title" Text="{Binding Title}" />
        <Entry Placeholder="Description" Text="{Binding Description}" />

        <HorizontalStackLayout>
            <Button Text="Add" Command="{Binding AddItemCommand}" />
        </HorizontalStackLayout>

        <ListView ItemsSource="{Binding Items}" SelectedItem="{Binding CurrentItem}">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <TextCell Text="{Binding Title}" Detail="{Binding Description}" />
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>

        <Button Text="Delete" Command="{Binding DeleteItemCommand}" CommandParameter="{Binding SelectedItem}" />
    </VerticalStackLayout>
</ContentPage>