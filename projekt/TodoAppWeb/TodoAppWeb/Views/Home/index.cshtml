@model List<TodoAppWeb.Models.Group>

<h1>Groups</h1>

<table class="table">
    <thead>
    <tr>
        <th>Group Name</th>
        <th>Actions</th>
    </tr>
    </thead>
    <tbody>
    @foreach (var group in Model)
    {
        <tr>
            <td>@group.Name</td>
            <td>
                <a asp-action="DetailsGroup" asp-controller="Group" asp-route-id="@group.GroupId" class="btn btn-info">Details</a>
            </td>
        </tr>
    }
    </tbody>
</table>

<a asp-action="CreateGroup" asp-controller="Group" class="btn btn-primary">Add Group</a>