<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
    <title>@ViewData["Title"] - TodoAppWeb</title>
    <script type="importmap"></script>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css"/>
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true"/>
    <link rel="stylesheet" href="~/TodoAppWeb.styles.css" asp-append-version="true"/>
</head>
<body>

<header>
    <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
        <div class="container-fluid">
            <!-- Brand/Logo -->
            <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">Groups</a>
            <ul class="navbar-nav ms-auto">
                <!-- The 'edit' toggle button -->
                <li class="nav-item">
                    <a asp-action="ToggleEdit"
                       asp-controller="Home"
                       asp-route-returnUrl="@($"{Context.Request.Path}{Context.Request.QueryString}")"
                       class="btn btn-outline-primary me-2">
                        @((ViewBag.IsEditMode == true) ? "End Edit" : "Edit")
                    </a>
                </li>



                <!-- Additional buttons you inject from specific views -->
                @RenderSection("AdditionalNavButtons", required: false)
            </ul>
        </div>
    </nav>
</header>

<div class="container">
    <main role="main" class="pb-3">
        @RenderBody()
    </main>
</div>

<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
<script src="~/js/site.js" asp-append-version="true"></script>
@await RenderSectionAsync("Scripts", required: false)
</body>
</html>
