@model TaskModel

<h1>Edit Task</h1>

<form asp-action="Edit" method="post">
    <input type="hidden" name="TaskId" value="@Model.TaskId" />

    <label for="Title">Title</label>
    <input type="text" name="Title" value="@Model.Title" required />

    <label for="Description">Description</label>
    <textarea name="Description">@Model.Description</textarea>

    <label for="GroupId">Group ID</label>
    <input type="number" name="GroupId" value="@Model.GroupId" required />

    <label for="IsCompleted">Completed</label>
    <input type="checkbox" name="IsCompleted" @(Model.IsCompleted ? "checked" : "") />

    <button type="submit">Save</button>
</form>