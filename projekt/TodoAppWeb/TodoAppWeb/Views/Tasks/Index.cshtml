@model List<TaskModel>

<h1>Tasks</h1>
<a href="/Tasks/Create">Add New Task</a>

<table>
    <thead>
        <tr>
            <th>Title</th>
            <th>Description</th>
            <th>Group</th>
            <th>Completed</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
    @foreach (var task in Model)
    {
        <tr>
            <td>@task.Title</td>
            <td>@task.Description</td>
            <td>@task.GroupName</td>
            <td>@task.IsCompleted</td>
            <td>
                <a href="/Tasks/Edit/@task.TaskId">Edit</a> |
                <a href="/Tasks/Delete/@task.TaskId">Delete</a>
            </td>
        </tr>
    }
    </tbody>
</table>
