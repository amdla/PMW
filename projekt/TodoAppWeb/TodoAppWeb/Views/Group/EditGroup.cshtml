@model TodoAppWeb.Models.Group

@{
    ViewBag.Title = "Edit Group";
}

<h2>Edit Group</h2>

<form asp-action="EditGroup" asp-controller="Group" method="post">
    <div class="form-group mb-3">
        <label asp-for="Name" class="form-label"></label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <!-- We need the GroupId to persist in POST -->
    <input type="hidden" asp-for="GroupId" />

    <button type="submit" class="btn btn-primary">Save Changes</button>
    <a asp-action="DetailsGroup" asp-route-id="@Model.GroupId" class="btn btn-secondary">Cancel</a>
</form>