@model TodoAppWeb.Models.TodoTask

<h1>Delete Task</h1>

<p>Are you sure you want to delete this task?</p>

<div>
    <strong>Title:</strong> @Model.Title<br/>
    <strong>Description:</strong> @Model.Description<br/>
    <strong>Group:</strong> @Model.GroupName<br/>
    <strong>Completed:</strong> @Model.IsCompleted
</div>

<form asp-action="Delete" asp-controller="Task" method="post">
    <input type="hidden" name="TaskId" value="@Model.TaskId"/>
    <button type="submit">Yes, Delete</button>
    <a href="/">Cancel</a>
</form>