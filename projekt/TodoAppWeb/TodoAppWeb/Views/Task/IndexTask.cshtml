@model List<TodoAppWeb.Models.TodoTask>

<h1>Tasks</h1>

<table class="table">
    <thead>
    <tr>
        <th>Title</th>
        <th>Description</th>
        <th>Group</th>
        <th>Completed</th>
        <th>Actions</th>
    </tr>
    </thead>
    <tbody>
    @foreach (var task in Model)
    {
        <tr>
            <td>@task.Title</td>
            <td>@task.Description</td>
            <td>@task.GroupName</td>
            <td>@(task.IsCompleted ? "Yes" : "No")</td>
            <td>
                <!-- Use tag helpers for the "Edit" link -->
                <a asp-action="EditTask" asp-controller="Task" asp-route-id="@task.TaskId"
                   class="btn btn-warning">Edit</a>

                <!-- Use tag helpers for the "Delete" link -->
                <a asp-action="DeleteTask" asp-controller="Task" asp-route-id="@task.TaskId" class="btn btn-danger">Delete</a>
            </td>
        </tr>
    }
    </tbody>
</table>