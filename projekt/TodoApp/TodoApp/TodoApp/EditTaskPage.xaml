<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TodoApp.EditTaskPage"
             Title="Edit Task">

    <StackLayout Padding="10">
        <Entry Text="{Binding Task.Title}" Placeholder="Title" />
        <Editor Text="{Binding Task.Description}" Placeholder="Description" HeightRequest="100" />
        <Button Text="Save" Command="{Binding SaveCommand}" />
    </StackLayout>
</ContentPage>
