@model CalculatorModel

<h2>Kalkulator</h2>

<form asp-action="Calculator" method="post">
    <div>
        @Html.LabelFor(m => m.Number1, "Pierwsza liczba:")
        @Html.TextBoxFor(m => m.Number1, new { type = "number", step = "any" })
    </div>
    <div>
        @Html.LabelFor(m => m.Number2, "Druga liczba:")
        @Html.TextBoxFor(m => m.Number2, new { type = "number", step = "any" })
    </div>
    <div>
        <button type="submit">Calculate</button>
    </div>
</form>

@if (Model != null)
{
    <div>
        <strong>Wynik: @Model.Result</strong>
    </div>
}
}