@model List<Book>

<h2 class="mb-4">Books List</h2>

<!-- Add Book Button -->
<a href="/Books/Create" class="btn btn-success mb-3">Add New Book</a>

<!-- Search and Filter Form -->
<form method="get" asp-action="Index" class="form-inline mb-4">
    <div class="form-group mr-2 mb-2">
        <input type="text" name="searchQuery" placeholder="Search by Name or ID" class="form-control"/>
    </div>
    <div class="form-group mr-2 mb-2">
        <select name="authorFilter" class="form-control">
            <option value="">Select Author</option>
            <option value="Author1">Author1</option>
            <option value="Author2">Author2</option>
        </select>
    </div>
    <div class="form-group mr-2 mb-2">
        <select name="availabilityFilter" class="form-control">
            <option value="">Select Availability</option>
            <option value="true">Available</option>
            <option value="false">Not Available</option>
        </select>
    </div>
    <div class="form-group mr-2 mb-2">
        <input type="number" name="yearFilter" placeholder="Year" class="form-control"/>
    </div>
    <div class="form-group mr-2 mb-2">
        <select name="genreFilter" class="form-control">
            <option value="">Select Genre</option>
            <option value="Genre1">Genre1</option>
            <option value="Genre2">Genre2</option>
        </select>
    </div>
    <div class="form-group mr-2 mb-2">
        <select name="priceFilter" class="form-control">
            <option value="">Select Price</option>
            <option value="Price1">Price1</option>
            <option value="Price2">Price2</option>
        </select>
    </div>
    <div class="form-group mr-2 mb-2">
        <select name="sortOrder" class="form-control mr-2">
            <option value="">Sort By</option>
            <option value="name_asc">Name Ascending</option>
            <option value="name_desc">Name Descending</option>
            <option value="author_asc">Author Ascending</option>
            <option value="author_desc">Author Descending</option>
            <option value="availability_asc">Availability Ascending</option>
            <option value="availability_desc">Availability Descending</option>
            <option value="year_asc">Year Ascending</option>
            <option value="year_desc">Year Descending</option>
            <option value="genre_asc">Genre Ascending</option>
            <option value="genre_desc">Genre Descending</option>
            <option value="price_asc">Price Ascending</option>
            <option value="price_desc">Price Descending</option>
        </select>
    </div>
    <button type="submit" class="btn btn-primary mb-2">Apply Filters</button>
</form>

<!-- Books Table -->
<table class="table table-striped table-hover">
    <thead class="thead-dark">
    <tr>
        <th>Name</th>
        <th>Author</th>
        <th>Available</th>
        <th>Year of Publish</th>
        <th>Literary Genre</th>
        <th>Price</th>
        <th>Actions</th>
    </tr>
    </thead>
    <tbody>
    @foreach (var book in Model)
    {
        <tr>
            <td>@book.Name</td>
            <td>@book.Author</td>
            <td>@(book.IsAvailable ? "Yes" : "No")</td>
            <td>@book.YearOfPublish</td>
            <td>@book.LiteraryGenre</td>
            <td>@book.Price</td>
            <td>
                <a href="/Books/Edit/@book.Id" class="btn btn-warning btn-sm">Edit</a>
                <a href="/Books/Delete/@book.Id" class="btn btn-danger btn-sm">Delete</a>
            </td>
        </tr>
    }
    </tbody>
</table>