<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0, shrink-to-fit=no">
    <title>@ViewData["Title"] - Online Library</title>
    <!-- Now UI Dashboard CSS -->
    <link href="~/css/bootstrap.min.css" rel="stylesheet" />
    <link href="~/css/now-ui-dashboard.css" rel="stylesheet" />

    <!-- Font Awesome Icons (For all icons in the navbar and sidebar) -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css" rel="stylesheet">

    <style>
        /* Custom CSS to adjust the navbar, spacing, and content */
        .navbar {
            background-color: #343a40; /* Dark background color for the navbar */
        }

        .navbar-form .input-group {
            display: flex;
            align-items: center;
            padding: 5px 15px;
        }

        .navbar-form .input-group .form-control {
            border: 0;
            border-radius: 30px;
            background-color: rgba(255, 255, 255, 0.1); /* Transparent background for search bar */
            padding-left: 15px;
            color: white;
            width: 250px; /* Adjust width to create more space */
        }

        .navbar-form .input-group .btn {
            margin-left: 10px; /* Increase spacing between search and icons */
            background-color: #666666;
            border-radius: 50%;
        }

        .navbar-nav .nav-item {
            margin-left: 15px; /* More space between the navbar icons */
        }

        #main-panel .content {
            padding-top: 150px; /* Adjust this value based on the height of your navbar */
        }
    </style>
</head>

<body>
    <div class="wrapper">
        <!-- Sidebar -->
        <div class="sidebar" data-color="orange">
            <div class="logo">
                <a href="/" class="simple-text logo-normal">
                    Online Library
                </a>
            </div>
            <div class="sidebar-wrapper" id="sidebar-wrapper">
                <ul class="nav">
                    <li class="nav-item">
                        <a href="/Home/Index" class="nav-link">
                            <i class="fas fa-home"></i> <!-- Font Awesome icon for Home -->
                            <p>Home</p>
                        </a>
                    </li>
                    <li class="nav-item">
                        <a href="/Home/Privacy" class="nav-link">
                            <i class="fas fa-lock"></i> <!-- Font Awesome icon for Privacy -->
                            <p>Privacy</p>
                        </a>
                    </li>
                    <li class="nav-item">
                        <a href="/Books/Index" class="nav-link">
                            <i class="fas fa-book"></i> <!-- Font Awesome icon for Books -->
                            <p>Books</p>
                        </a>
                    </li>
                    <li class="nav-item">
                        <a href="/Reports" class="nav-link">
                            <i class="fas fa-chart-pie"></i> <!-- Font Awesome icon for Reports -->
                          <p>Reports</p>
                        </a>
                    </li>
                </ul>
            </div>
        </div>

        <!-- Main Panel -->
        <div class="main-panel" id="main-panel">
            <!-- Navbar -->
            <nav class="navbar navbar-expand-lg navbar-default navbar-absolute fixed-top">
                <div class="container-fluid">
                    <div class="navbar-wrapper">
                        <a class="navbar-brand" href="#">@ViewData["Title"]</a>
                    </div>
                    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navigation"
                        aria-controls="navigation-index" aria-expanded="false" aria-label="Toggle navigation">
                        <span class="navbar-toggler-bar navbar-kebab"></span>
                        <span class="navbar-toggler-bar navbar-kebab"></span>
                        <span class="navbar-toggler-bar navbar-kebab"></span>
                    </button>
                    <div class="collapse navbar-collapse justify-content-end" id="navigation">
                        <form class="navbar-form">
                            <div class="input-group no-border">
                                <input type="text" value="" class="form-control" placeholder="Search...">
                                <button type="submit" class="btn btn-default btn-round btn-just-icon">
                                    <i class="fas fa-search"></i> <!-- Font Awesome search icon -->
                                </button>
                            </div>
                        </form>
                        <ul class="navbar-nav">
                            <li class="nav-item">
                                <a class="nav-link" href="#">
                                    <i class="fas fa-globe"></i> <!-- Font Awesome icon for world -->
                                    <p>
                                        <span class="d-lg-none d-md-block">Stats</span>
                                    </p>
                                </a>
                            </li>
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle" href="#" id="navbarDropdownMenuLink"
                                    data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                    <i class="fas fa-user"></i> <!-- Font Awesome icon for user -->
                                </a>
                                <div class="dropdown-menu dropdown-menu-right"
                                    aria-labelledby="navbarDropdownMenuLink">
                                    <a class="dropdown-item" href="#">Profile</a>
                                    <a class="dropdown-item" href="#">Settings</a>
                                    <a class="dropdown-item" href="#">Log out</a>
                                </div>
                            </li>
                        </ul>
                    </div>
                </div>
            </nav>
            <!-- End Navbar -->

            <div class="content">
                <div class="container-fluid">
                    @RenderBody()
                </div>
            </div>
        </div>
    </div>

    <!-- Core JS Files -->
    <script src="~/js/jquery.min.js"></script>
    <script src="~/js/popper.min.js"></script>
    <script src="~/js/bootstrap.min.js"></script>
    <script src="~/js/now-ui-dashboard.min.js"></script>
</body>

</html>
